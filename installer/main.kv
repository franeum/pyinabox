#:kivy 1.0

<Screen>:
	MDBoxLayout:
		orientation: 'vertical'
		MDLabel: 
			text: "PYTHON IN A BOX"
			markup: True 
			halign: "center"
			font_style: "H2"

		MDFloatLayout:
			MDFillRoundFlatButton:
				orientation: "vertical"
				markup: True
				text: "[font=MiriamMonoCLM-Bold][size=48]Firmware file .bin[/size][/font]"
				pos_hint: {"center_x": 0.5, "center_y": 0.8}
				on_release: app.file_manager_open()

			MDLabel:
				id: firmware_path
				markup: True
				text: ""
				halign: "center"
				pos_hint: {"center_x": 0.5, "center_y": 0.7}

			MDFillRoundFlatButton:
				id: loader_button
				orientation: "vertical"
				text: "LOAD ON DEVICE"
				pos_hint: {"center_x": 0.5, "center_y": 0.6}
				disabled: True 
